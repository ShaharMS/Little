	@:allow(haxe.macro.TypeTools) @:allow(haxe.macro.MacroStringTools) @:allow(haxe.macro.TypedExprTools) @:allow(haxe.macro.PositionTools)
	static function load(f:String, nargs:Int) {
		return eval.vm.Context.callMacroApi(f);
	}

