	public static function getLocalClass() {
		var l = haxe.macro.Context.load("get_local_type", 0)();
		if (l == null) {
			return null;
		};
		return @:ast(switch (l) {
	case TInst(c, _):
		c;	
	default:
		null;	
}) if (enumIndex l == 2) {
			var ` = l[0];
			var ` = l[1];
			{
				var c = `;
				{
					c;
				};
			};
		} else {
			null;
		};
	}

