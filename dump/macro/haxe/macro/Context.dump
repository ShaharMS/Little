	@:allow(haxe.macro.Compiler)
	static function assertInitMacro() {
		if (haxe.macro.Context.initMacrosDone()) {
			var stack = haxe.macro.Context.getMacroStack();
			haxe.macro.Context.warning("This API should only be used from initialization macros.", if (stack.length > 2) {
				stack[2];
			} else {
				haxe.macro.Context.currentPos();
			}, null);
		};
	}

	@:value({ includeSuggestion : true })
	static function assertInitMacrosDone(includeSuggestion:Bool = true) {}
